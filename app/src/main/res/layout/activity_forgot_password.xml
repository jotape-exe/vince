<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:id="@+id/main_forgot_password"
    tools:context=".view.auth.ForgotPasswordActivity">

    <TextView
        android:id="@+id/text_forgot_password"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_height="wrap_content"
        android:text="Esqueci a senha"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/image_email_unread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_email_unread"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_email_unread"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/text_forgot_password"
        app:layout_constraintBottom_toTopOf="@+id/text_hint_forgot_password"
        app:layout_constraintEnd_toEndOf="@+id/text_hint_forgot_password"
        app:layout_constraintStart_toStartOf="@+id/text_hint_forgot_password" />

    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/text_hint_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Um link serÃ¡ enviado para seu email!"
        android:textSize="22sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/edit_existing_email_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_forgot_password" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_existing_email_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/button_send_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_hint_forgot_password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_existing_email"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_send_link"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Enviar"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edit_existing_email_layout"
        app:layout_constraintStart_toStartOf="@+id/edit_existing_email_layout"
        app:layout_constraintTop_toBottomOf="@+id/edit_existing_email_layout" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        style="@style/Widget.Material3.Button.TextButton"
        android:text="Voltar"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/button_send_link"
        app:layout_constraintStart_toStartOf="@+id/button_send_link"
        app:layout_constraintTop_toBottomOf="@+id/button_send_link" />

</androidx.constraintlayout.widget.ConstraintLayout>