<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:id="@+id/main_forgot_password"
    tools:context=".view.ForgotPasswordActivity">

    <TextView
        android:id="@+id/text_forgot_password"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_height="wrap_content"
        android:text="Esqueci a senha"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/text_hint_forgot_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/text_hint_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Um link serÃ¡ enviado para seu email!"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@id/edit_existing_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_forgot_password" />

    <EditText
        android:id="@+id/edit_existing_email"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:hint="@string/email"
        android:background="@drawable/edit_text_radius"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/button_send_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_hint_forgot_password" />

    <Button
        android:id="@+id/button_send_link"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Enviar"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edit_existing_email"
        app:layout_constraintStart_toStartOf="@+id/edit_existing_email"
        app:layout_constraintTop_toBottomOf="@+id/edit_existing_email" />

</androidx.constraintlayout.widget.ConstraintLayout>