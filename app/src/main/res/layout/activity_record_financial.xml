<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".view.RecordFinancialActivity">

    <TextView
        android:id="@+id/view_add_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Novo Registro"
        android:textAlignment="textStart"
        android:textSize="26sp"
        app:drawableBottomCompat="@color/main_green_2"
        app:drawableEndCompat="@drawable/ic_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:backgroundTint="@color/main_green_2"
        app:layout_constraintEnd_toEndOf="@+id/view_add_record"
        app:layout_constraintStart_toStartOf="@+id/view_add_record"
        app:layout_constraintTop_toBottomOf="@id/view_add_record" />

    <Button
        android:id="@+id/button_revenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Receita"
        app:layout_constraintEnd_toStartOf="@id/button_expense"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_separator" />

    <Button
        android:id="@+id/button_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Despesa"
        app:layout_constraintEnd_toStartOf="@id/button_transfer"
        app:layout_constraintStart_toEndOf="@id/button_revenue"
        app:layout_constraintTop_toBottomOf="@id/view_separator" />

    <Button
        android:id="@+id/button_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Transferencia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_expense"
        app:layout_constraintTop_toBottomOf="@id/view_separator" />

    <View
        android:layout_width="380dp"
        android:layout_height="480dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/radius_shape"
        android:backgroundTint="@color/ultralight_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_expense" />

</androidx.constraintlayout.widget.ConstraintLayout>